    <link rel="stylesheet" type="text/css"   href="/css/style.css">
<style>
main{
  display: flex;
  justify-content: space-between;
}

.text-containers{
  color: var(--forgroundColor);
  background-color: hsla(0, 0%, 80%, 0.141);
  padding: 1rem;
  text-align: justify;
  width:50%;
  margin:1rem;
}

.image-containers{
margin:1rem;
width:50%;
overflow: hidden;
display: flex;
flex-wrap: wrap;
object-fit: cover;

}

img{
width:30%;
background-color: hsla(0, 0%, 80%, 0.141);
padding: .7rem;
margin:.2rem;
filter: grayscale(100%);
}
</style>

    <title>Carverse</title>
</head>

<body>

    <header id="header">

        <nav id="nav-bar">
            <div id="logo">
                Carverse
            </div>
            
            <ul id="nav-links">
                <a href="/"><li>Home</li></a>
                <a href="/contact"><li>Contact Us</li></a>
                <a id="active"  href="/buy"><li>Buy</li></a>
                <% if(!currentUser){ %> 
                    <a href="/login"><li>Login</li></a>
                    <a href="/register">Register</a>
                    <% }else{ %> 
                    <a href="/logout">Logout</a>
                    <% } %> 

            </ul>


        </nav>

    </header>
   

    <main class="main">
        <section class="image-containers container"> 
          <img src="https://source.unsplash.com/random/100*100/?blackcar">
          <img src="https://source.unsplash.com/random/100*100/?whitecar">
          <img src="https://source.unsplash.com/random/100*100/?redcar">
          <img src="https://source.unsplash.com/random/100*100/?greencar">
          <img src="https://source.unsplash.com/random/100*100/?yellowcar">
          <img src="https://source.unsplash.com/random/100*100/?supercar">
    
     
        </section>
        <section class="text-containers  container">
            <h1>welcome to buy page you are successfully logged in</h1>
            </section>
        </main>




</body>

</html>